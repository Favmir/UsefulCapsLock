;========== Change these values to change the size of GUI popup.
LayoutG := 8				;Gap between keys
LayoutW := 48				;Width of regular key
LayoutH := 48				;Height of regular key
LayoutWBSpc := 108			;Backspace Width: determines the total Keyboard width(13×LayoutW + 15×LayoutG + LayoutWBSpc). Has to be bigger than (LayoutWTab - LayoutW).
LayoutWTab := 78			;Tab Width
LayoutWCaps := 98			;Caps Lock Width
LayoutWShift := 128			;Left Shift Width
LayoutWCtrl := 62			;Left Ctrl(and other function keys like Windows) Width

ColorBG := "EEEEE9"			;Background Color
;ColorBtn := "F0F0EF"		;not used
;ColorStop := "FF8888"		;not used